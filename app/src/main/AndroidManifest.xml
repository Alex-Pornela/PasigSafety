<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.capstone.pasigsafety">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PasigSafety">
        <activity
            android:name=".User.About"
            android:exported="false" />
        <activity
            android:name=".User.CrimeDetails"
            android:exported="false" />
        <activity
            android:name=".User.EditUserProfile"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Admin.AddNewCrimeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".User.ChangePasswordSucces"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".User.ChangePassword"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.IntroScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Dashboard"
            android:exported="false"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.LoginSignup.ForgetPasswordSuccessMessage"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.LoginSignup.SetNewPassword"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.LoginSignup.MakeSelection"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.LoginSignup.ForgetPassword"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.LoginSignup.VerifyOTP"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.LoginSignup.Signup3rdClass"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.LoginSignup.Signup2ndClass"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.LoginSignup.SignUp"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.LoginSignup.Login"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.LoginSignup.StartUpScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.OnBoarding"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".User.UserDashboard"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Common.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/API_KEY" />
    </application>

</manifest>